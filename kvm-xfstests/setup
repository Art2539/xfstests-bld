#!/bin/sh

DIR=.
if test -n "$KVM_XFSTESTS_DIR"
then
    DIR="$KVM_XFSTESTS_DIR"
fi

qemu-img create -f raw "$DIR/vdb" 5g
qemu-img create -f raw "$DIR/vdc" 5g
qemu-img create -f raw "$DIR/vdd" 5g
qemu-img create -f raw "$DIR/vde" 20g
qemu-img create -f raw "$DIR/vdf" 20g
qemu-img create -f raw "$DIR/vdg" 5g
/sbin/mke2fs -q -t ext4 -F "$DIR/vdb"
/sbin/mke2fs -q -t ext4 -b 1024 -F "$DIR/vdd"
/sbin/mke2fs -q -t ext4 -F "$DIR/vdg"


